{
  "name": "hsr-lite",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "next": "next dev -p 3000",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:dev": "concurrently \"tsc -p tsconfig.electron.json --watch\" \"wait-on tcp:3000 && cross-env NODE_ENV=development electron dist-electron/main.js\"",
    "dev": "concurrently \"yarn next\" \"yarn electron:dev\"",
    "build:web": "next build",
    "build:desktop": "yarn electron:build && electron-builder",
    "dist": "yarn build:web && yarn build:desktop"
  },
  "build": {
    "appId": "com.hsr.lite",
    "files": [
      "dist-electron/**",
      "out/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "packageManager": "yarn@4.6.0+sha512.5383cc12567a95f1d668fbe762dfe0075c595b4bfff433be478dbbe24e05251a8e8c3eb992a986667c1d53b6c3a9c85b8398c35a960587fbd9fa3a0915406728"
}
